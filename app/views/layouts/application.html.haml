!!!
%html{:lang => "es"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title App
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{:class => controller.controller_path + '_' + controller.action_name}
    %header
      .container-fluid
        .row
          .header-container.clearfix
            %nav.navbar.navbar-static-top
              .container
                .navbar-header
                  %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                  .logo
                    = link_to "/schemas" do
                      = image_tag "logo.svg", :class => "img-responsive"
                #navbar.navbar-collapse.collapse
                  %ul.nav.navbar-nav.principal
                    %li{:role => "presentation"}
                      =active_link_to 'Servicios', '/services', :active => :inclusive
                    %li{:role => "presentation"}
                      =active_link_to 'Esquemas', '/schemas', :active => :inclusive
                    %li{:role => "presentation"}
                      %a{:href => "#"} Convenios
                  .nav.navbar-nav.navbar-right
                    =render 'layouts/menu'

    .container-fluid.main-container
      = render "shared/flash_messages", :locals => { :flash => flash }
      = yield
    %footer.no-gutter
      .container-fluid.footer-container
        .row
          .col-md-6{:class => "col-xs-6 footer-col blue text-left"}
          .col-md-6{:class => "col-xs-6 footer-col red text-right"}
          .clearfix
        .row
          .container
            .col-md-6.col-xs-6.footer-col
              .box-logo-footer
                %p
                  Gobierno de Chile
                =image_tag "gobcl-brand.svg", :class => "img-responsive"
            .col-md-6.col-xs-6.footer-col
              %p.text-right
                Pol√≠ticas de Privacidad | CC
