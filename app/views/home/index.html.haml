.instance-panel
  .container
    .col-md-12{:class => "text-center"}
      %h1= t(:service_directory)
      .form-group.col-md-8.container-form
        = form_tag(search_services_path, :method => "get") do
          .inner-addon.left-addon
            %i.glyphicon.glyphicon-search
            %input#search-service.form-control{:placeholder => t(:enter_service_name), :type => "text", :name => "text_search"}/
.container-fliud.list-services-home
  .container
    .row
      .col-md-12
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "#featured", "data-toggle" => "tab", :href => "#featured", :role => "tab"} Servicios Destacados
          %li{:role => "presentation"}
            %a{"aria-controls" => "#popular", "data-toggle" => "tab", :href => "#popular", :role => "tab"} Servicios MÃ¡s Usados
  .container-fluid.tab-content
    #featured.tab-pane.active{role: 'tabpanel'}
      .container
        .row
          .col-md-12.schema-wrapper.text-left
            = render partial: "boxes", locals: {services: @featured_services}
    #popular.tab-pane{role: 'tabpanel'}
      .container
        .row
          .col-md-12.schema-wrapper.text-left
            = render partial: "boxes", locals: {services: @popular_services}
