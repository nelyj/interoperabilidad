
.new-agreement.main-container
  .container-fluid.main-title
    .container
      .row
        .col-md-12
          %h1
            = t(:create_data_category)
  .container-fluid
    .container
      .row.new-service-container
        = form_for @data_category do |f|
          .row
            .col-md-4
              %h4
                = t(:category_name)
          .row
            .col-md-4
              = f.text_field :name, class: "form-control input-lg user-success"
          .col-md-4.col-md-offset-8
            = f.submit t(:send_data), class: "btn btn-primary btn-lg col-md-offset-4"

